<div class="container" style="margin-top: 50px;">
    {{! fila 1 }}
    <div class="row">
        <p class="text-end">Bienvenido/a {{persona}}
            ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    {{! fin fila 1 }}
    {{! fila 2 }}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Criptidos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/criptidos/agregar"><i class="fa fa plus" aria-hidden="true"></i>
                Nuevo</a>
        </div>
    </div>
    {{! fin fila 2}}
    {{! fila 3 }}
    <div class="row">
        <div class="column">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">nombre</th>
                        <th scope="col">imagen</th>
                        <th scope="col">clase</th>
                        <th scope="col">estado actual</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each criptidos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{nombre}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{clase}}</td>
                        <td>{{estado}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/criptidos/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/criptidos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{! fin fila 3}}
</div>